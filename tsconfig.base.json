{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@opencord/shared": ["packages/shared/src/index.ts"],
      "@opencord/ui": ["packages/ui/src/index.ts"],
      "@opencord/api-client": ["packages/api-client/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
